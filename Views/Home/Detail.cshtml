@model DetalViewModel

@{
    ViewData["Title"] = "Detail";
}

<div class="row">

    <div class="col-12">

        <div class="card">
            <div class="card-header">
                متميز
            </div>
            <div class="card-body text-center">

                <figure class="figure">
                    <svg class="bd-placeholder-img figure-img img-fluid rounded" width="400" height="300" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 400x300" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">400x300</text></svg>
                </figure>

                <h5 class="card-title">@Model.Product.Name</h5>
                <p class="card-text">@Model.Product.Description</p>
                <p class="card-text">قیمت:   @Model.Product.Item.Price</p>

                <dl>
                    @foreach(var item in Model.Categories)
                    {
                        <dt><a>@item.Name</a></dt>
                        <dd>@item.Description</dd>
                    }
                </dl>


                <a class="btn btn-primary"
                   asp-controller="Home"
                   asp-action="AddToCart"
                   asp-route-itemId="@Model.Product.ItemId">افزودن به سبد خرید</a>
            </div>
            
        </div>

    </div>

</div>


